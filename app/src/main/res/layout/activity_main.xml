<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:anna="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#999"
              android:orientation="vertical">


    <com.sanba.im.testcollapplication.sfs.MatrixImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ToolBar Hide"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ToolBar Collapsing"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal">

        <com.sanba.im.testcollapplication.ChangeColorIconWithText
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/tab_name"
            anna:color_1="#ff45c01a"
            anna:icon_1="@drawable/ic_menu_start_conversation"
            anna:text_size_1="12sp"/>

        <com.sanba.im.testcollapplication.ChangeColorIconWithText
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/tab_contact"
            anna:color_1="#ff45c01a"
            anna:icon_1="@drawable/ic_menu_friendslist"
            anna:text_size_1="12sp"/>

        <com.sanba.im.testcollapplication.ChangeColorIconWithText

            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/tab_found"
            anna:color_1="#ff45c01a"
            anna:icon_1="@drawable/ic_menu_emoticons"
            anna:text_size_1="12sp"/>

        <com.sanba.im.testcollapplication.ChangeColorIconWithText

            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/tab_me"
            anna:color_1="#ff45c01a"
            anna:icon_1="@drawable/ic_menu_allfriends"
            anna:text_size_1="12sp"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
